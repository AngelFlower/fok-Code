<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Theme that mimics Visual Studio's defaults.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->

<RSyntaxTheme version="1.0">

   <!-- Omitting baseFont will use a system-appropriate monospaced. -->
   <!--<baseFont family="..." size="13"/>-->
   
   <!--  General editor colors. -->
   <background color="212121"/>
   <caret color="FFCC00"/>
   <selection fg="default" bg="default"/>
   <currentLineHighlight color="424242" fade="false"/>
   <marginLine fg="ff0000"/>
   <markAllHighlight color="526369"/> <!-- TODO: Fix me -->
   <markOccurrencesHighlight color="d4d4d4" border="false"/> <!-- TODO: Fix me -->
   <matchedBracket fg="526369" highlightBoth="true" animate="true"/>
   <hyperlinks fg="B2CCD6"/>
   <secondaryLanguages>
      <language index="1" bg="fff0cc"/>
      <language index="2" bg="dafeda"/>
      <language index="3" bg="ffe0f0"/>
   </secondaryLanguages>
   
   
   <!-- Gutter styling. -->
   <gutterBorder color="424242"/>
   <lineNumbers fg="424242"/>
   <foldIndicator fg="808080" iconBg="ffffff"/>
   <iconRowHeader activeLineRange="3399ff"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="ffffff"/>
      <style token="RESERVED_WORD" fg="C792EA" bold="true"/>
      <style token="RESERVED_WORD_2" fg="C792EA" bold="true"/>
      <style token="ANNOTATION" fg="808080"/>
      <style token="COMMENT_DOCUMENTATION" fg="4A4A4A"/>
      <style token="COMMENT_EOL" fg="4A4A4A"/>
      <style token="COMMENT_MULTILINE" fg="4A4A4A"/>
      <style token="COMMENT_KEYWORD" fg="4A4A4A"/>
      <style token="COMMENT_MARKUP" fg="4A4A4A"/>
      <style token="DATA_TYPE" fg="C792EA" bold="true"/>
      <style token="FUNCTION" fg="C792EA"/>
      <style token="LITERAL_BOOLEAN" fg="D68C6C" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="D68C6C"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="D68C6C"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="D68C6C"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="C3E88D"/>
      <style token="LITERAL_CHAR" fg="C3E88D"/>
      <style token="LITERAL_BACKQUOTE" fg="C3E88D"/>
      <style token="MARKUP_TAG_DELIMITER" fg="89DDFF"/>
      <style token="MARKUP_TAG_NAME" fg="F07178"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="C792EA"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="C3E88D"/>
      <style token="MARKUP_COMMENT" fg="4A4A4A" italic="true"/>
      <style token="MARKUP_DTD" fg="ad8000"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="808080"/>
      <style token="MARKUP_CDATA" fg="000000"/>
      <style token="MARKUP_CDATA_DELIMITER" fg="89DDFF"/>
      <style token="OPERATOR" fg="89DDFF"/>
      <style token="PREPROCESSOR" fg="808080"/>
      <style token="REGEX" fg="89DDFF"/>
      <style token="SEPARATOR" fg="ffffff"/>
      <style token="VARIABLE" fg="ff9900" bold="true"/>
      <style token="WHITESPACE" fg="000000"/>
      
      <style token="ERROR_IDENTIFIER" fg="000000" bg="ffcccc"/>
      <style token="ERROR_NUMBER_FORMAT" fg="000000" bg="ffcccc"/>
      <style token="ERROR_STRING_DOUBLE" fg="000000" bg="ffcccc"/>
      <style token="ERROR_CHAR" fg="000000" bg="ffcccc"/>
   </tokenStyles>

</RSyntaxTheme>