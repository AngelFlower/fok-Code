<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Dark theme based off of Notepad++'s Obsidian theme.
	See theme.dtd and org.fife.ui.rsyntaxtextarea.Theme for more information.
-->
<RSyntaxTheme version="1.0">

   <!-- Omitting baseFont will use a system-appropriate monospaced. -->
   <!--<baseFont family="..." size="13"/>-->
   
   <!--  General editor colors. -->
   <background color="ffffff"/>
   <caret color="232323"/>
   <selection bg="default" fg="default"/>
   <currentLineHighlight color="ffffff" fade="false"/>
   <marginLine fg="394448"/>
   <markAllHighlight color="6b8189"/> <!-- TODO: Fix me -->
   <markOccurrencesHighlight color="5b7179" border="false"/>
   <matchedBracket fg="ffffff" highlightBoth="false" animate="false"/>
   <hyperlinks fg="167ac6"/>
   <secondaryLanguages>
      <language index="1" bg="333344"/>
      <language index="2" bg="223322"/>
      <language index="3" bg="332222"/>
   </secondaryLanguages>
   
   <!-- Gutter styling. -->
   <gutterBorder color="ffffff"/>
   <lineNumbers fg="232323"/>
   <foldIndicator fg="6A8088" iconBg="2f383c"/>
   <iconRowHeader activeLineRange="3399ff"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="232323"/>
      <style token="RESERVED_WORD" fg="232323" bold="true"/>
      <style token="RESERVED_WORD_2" fg="232323" bold="true"/>
      <style token="ANNOTATION" fg="232323"/>
      <style token="COMMENT_DOCUMENTATION" fg="232323"/>
      <style token="COMMENT_EOL" fg="232323"/>
      <style token="COMMENT_MULTILINE" fg="232323"/>
      <style token="COMMENT_KEYWORD" fg="232323"/>
      <style token="COMMENT_MARKUP" fg="232323"/>
      <style token="FUNCTION" fg="232323"/>
      <style token="DATA_TYPE" fg="232323" bold="true"/>
      <style token="LITERAL_BOOLEAN" fg="232323" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="232323"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="232323"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="232323D22"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="232323"/>
      <style token="LITERAL_CHAR" fg="232323"/>
      <style token="LITERAL_BACKQUOTE" fg="232323"/>
      <style token="MARKUP_TAG_DELIMITER" fg="232323"/>
      <style token="MARKUP_TAG_NAME" fg="232323BBFD3" bold="true"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="232323"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="232323"/>
      <style token="MARKUP_COMMENT" fg="232323"/>
      <style token="MARKUP_DTD" fg="232323"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="232323"/>
      <style token="MARKUP_CDATA" fg="232323"/>
      <style token="MARKUP_CDATA_DELIMITER" fg="232323"/>
      <style token="MARKUP_ENTITY_REFERENCE" fg="232323"/>
      <style token="OPERATOR" fg="232323"/>
      <style token="PREPROCESSOR" fg="232323"/>
      <style token="REGEX" fg="232323"/>
      <style token="SEPARATOR" fg="232323"/>
      <style token="VARIABLE" fg="232323" bold="true"/>
      <style token="WHITESPACE" fg="232323"/>
      
      <style token="ERROR_IDENTIFIER" fg="E0E2E4" bg="04790e"/>
      <style token="ERROR_NUMBER_FORMAT" fg="E0E2E4" bg="04790e"/>
      <style token="ERROR_STRING_DOUBLE" fg="E0E2E4" bg="04790e"/>
      <style token="ERROR_CHAR" fg="E0E2E4" bg="04790e"/>
   </tokenStyles>

</RSyntaxTheme>